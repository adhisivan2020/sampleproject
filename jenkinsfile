pipeline {
    agent any

    options {
        disableResume()
        timeout(time: 15, unit:'MINUTES')
    }
    tools {
        gradle 'gradle5.4'
    }

    environment {
        CRED1 = credentials("GITID")
    }

    stages {
        stage('Build'){
            steps {
                sh 'gradle clean build'
               echo "Running Build"     
            }
        }

        stage ('Test'){
            steps {
                sh 'gradle test'
                echo "Running Test"
            }
        }
    }

    post {
        failure {
            echo "Build action failed - you can send email from here"
        }

        success {
            echo "Build action success - proceed sending email from here"
        }
    }
}